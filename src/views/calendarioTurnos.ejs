<!DOCTYPE html>
<html>
<head>
  <title>Calendario de Turnos</title>
  <style>
    /* Estilos CSS para el calendario */
    .calendar {
      display: grid;
      grid-template-columns: repeat(7, 1fr);
      gap: 5px;
    }

    .day {
      border: 1px solid #ccc;
      padding: 5px;
    }
  </style>
  <meta charset="UTF-8">
  <!-- Nombre -->
  <title> Oh my dog</title>
  <!-- Favicon -->
  <link rel="icon" type="image/x-icon" href="Logo2.png">
  <!-- Styles -->
  <link rel="stylesheet" href="css/style.css">
  <!-- Boostrap-->
  <!--<link rel="stylesheet" href="https://bootswatch.com/5/united/bootstrap.min.css">-->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
</head>
<header>
    <div class="dropdown text-end" >
      <% if(true){   %> 
        <button class="btn  btn-lg dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
          Manejo de Turnos
        </button>
       <% } %> 
     
      <ul class="dropdown-menu">
        <li><a class="dropdown-item" href="#">Dar turnos</a></li>
        <li><a class="dropdown-item" href="/verturnos">Ver Turnos</a></li>
        <li><a class="dropdown-item" href="/">Volver al inicio</a></li>
      </ul>      
    </div>
    <center>
    <h1  aria-hidden="true" ></i>Calendario de Turnos</h1>
    </center>
</header>
<body>
  

  <div class="calendar">
    <%  const turnos = [
    new Date('2023-05-31'),
    new Date('2023-06-01'),
    new Date('2023-06-01'),
    new Date('2023-06-02'),
    // ...
  ];
  %>
    <% for (let i = 1; i <= 31; i++) { %>
        <div class="day">
          <h2><%= i %></h2>
          <% const dayTurnos = turnos.filter(turno => turno.getDate() === i); %>
          <% if (dayTurnos.length > 0) { %>
            <p><%= dayTurnos.length %> Turnos</p>
          <% } else { %>
            <p>No hay turnos</p>
          <% } %>
        </div>
      <% } %>
  </div>
</body>
</html>
