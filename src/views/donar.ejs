<%- include ('vistas') %>

  <h1 class="text-center">Modificar campaña de donacion.</h1>
  

  </div>
  <form onsubmit="return validarTarjeta()" action="/donar" class=" registro" method="post" >
    <div class="form-group">Nombre de la campaña:<%= data.nombreCampania %>
      <input name="id" type="hidden" value="<%= data.id %>">
    <input name="nombreCampania" type="hidden" value="<%= data.nombreCampania %>">
    <div class="form-group"><label for="NombreYApellido">Nombre y apellido :</label><br>
        <input type="text" class="form-control"  id="NombreYApellido" name="NombreYApellido">
      </div>
      <div style="visibility:hidden; color:red; " id="tarjeta_option_error">
        Ingrese un número de tarjeta de 16 numeros(sin espacios ni guiones).
      </div>
    <div class="form-group"><label for="tarjeta" >Número de la tarjeta de crédito:</label><br>
      <input type="text" class="form-control"  id="numeroTarjeta" name="numeroTarjeta">
          </div>
    <div class="form-group">  <label for="monto">Monto de donación:</label>
        <input type="number" id="monto" min="0"  step="0.01" name="monto" >
      </div>
      <input type="submit" value="DONAR" class="btn btn-info-orange">
  </form>
  <%- include ('partials/_footer') %>
  <script>
    function validarTarjeta(){
      var exp=/^[0-9]+$/;
      var numeroTarjeta=document.getElementById('numeroTarjeta').value
      console.log(numeroTarjeta.match(exp))
      if ((numeroTarjeta.match(exp)!=null)&& numeroTarjeta.length==16){
        document.getElementById("tarjeta_option_error").style.visibility = "hidden";
        return true
      }else{
        document.getElementById("tarjeta_option_error").style.visibility = "visible";
        return false
      }
    }
  </script>