<% promedio=function (puntos,calificaciones){ if (calificaciones==0){ return 0; }else{
    return(puntos/calificaciones).toFixed(1); }}%>
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <li class="container">
        <div class="card">
            <script src="publicjs.js"></script>
            <div class="card-header" id="nombre<%= data.id%>">
                <%= data.nombre %>
            </div>
            <div clas="card-body">
            <div id='zona<%= data.id%>'>
                <%=data.zonas%>
            </div>
            <div id='rating<%= data.id%>'> Calificaciones= <%= promedio(data.puntos,data.calificaciones)%>/5 (
                    <%=data.calificaciones%> opiniones) </div>
            <form id="calificar<%= data.id%>">    <input type="text" id="calificacion<%= data.id%>" size="1"
                    maxlength="1">        <button class="btn btn-info-orange" onclick="calificar(<%= data.id%>)"
                    >CALIFICAR</button> </form>
            <div id='descripcion<%= data.id%>'>
                <%=data.descripcion%>
            </div>
            <div id='horarios<%= data.id%>'><%- include ('_tablaHorarios',{data: data}) %> </div>
            <div id='contacto<%=data.id%>'>
                <button  class="btn btn-info-orange" type='button' onclick='contactar(<%= data.id%>)'
                    id='boton<%=data.id%>'>Contactar con
                    <%=data.nombre%>
                </button>
            </div>
            <div id="mensaje<%= data.id%>"> </div>
            <% if( (locals.user) && user[0].esAdmin==0){%>
                <button type='button' class="btn btn-info-orange" onclick='eliminar(<%= data.id%>,"<%=data.nombre%>")'
                    id='eliminar<%=data.id%>'>Eliminar publicacion de <%=data.nombre%></button><button type='button' class="btn btn-info-orange"
                    onclick="window.location.href='http://localhost:3000/modificar?id=<%= data.id%>'"
                    id='Modificar<%=data.id%>'>Modificar publicacion de <%=data.nombre%></button>

                <% } %>
        </div>
    </li>